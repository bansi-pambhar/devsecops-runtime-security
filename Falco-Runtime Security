#Falco detects abnormal runtime behavior
#Install Helm on Ubuntu Using Snap 
sudo snap install helm --classic
#Verify Helm Installation
helm version
#Add Falco Helm Repo and Install Falco
helm repo add falcosecurity https://falcosecurity.github.io/charts
helm repo update
helm install falco falcosecurity/falco
#verify pods
kubectl get pods
#Trigger alert
kubectl exec -it <pod-name> -- /bin/bash
kubectl exec -it devsecops-app-7445b74844-npmms -- /bin/bash
#Check logs
kubectl logs -n falco -f <falco-pod-name>
