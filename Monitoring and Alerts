#Security visibility is continuous, not one-time
#Install Prometheus & Grafana
helm repo add prometheus-community https://prometheus-community.github.io/helm-charts
helm install monitoring prometheus-community/kube-prometheus-stack

**monitor your Kubernetes cluster and your Flask app metrics**
#Check Pods
kubectl --namespace default get pods -l "release=monitoring"
#Access Grafana Dashboard
export POD_NAME=$(kubectl --namespace default get pod -l "app.kubernetes.io/name=grafana,app.kubernetes.io/instance=monitoring" -o name) kubectl --namespace default port-forward $POD_NAME 3000
#Get Grafana Admin Password
kubectl --namespace default get secret monitoring-grafana -o jsonpath="{.data.admin-password}" | base64 -d ; echo
